[colors]

foreground = ${xrdb:foreground:#9ca1b8}
;foreground = ${xrdb:background:#000}

background = ${xrdb:background:#0f0f13}
;background = ${xrdb:foreground:#000}

;  _                    
; | |__   __ _ _ __ ___ 
; | '_ \ / _` | '__/ __|
; | |_) | (_| | |  \__ \
; |_.__/ \__,_|_|  |___/

[bar/base]
enable-ipc=true

height = 40
width = 100%
offset-y = 10
line-size = 2

background = ${colors.background}
foreground = ${colors.foreground}
bottom = false

font-0=Google Sans:style=Regular:size=12;3
font-1=Google Sans:style=Bold:size=12;3
font-2=Material Icons:size=13;5
font-3=FontAwesome5Brands:size=11;2
font-4=IPAGothic:size=11;2
font-5=Roboto:pixelsize=12:antialias=true;1
font-6=Font Awesome 5 Free Regular:size=12;3
font-7=Font Awesome 5 Free Solid:size=12;3
font-8="FiraMono Nerd Font Mono:size=12;2"

wm-restack = bspwm

[bar/windows]
inherit = bar/base
monitor=DP-2
modules-left = bspwm
width = 8%
padding = 0
offset-x = 10

[bar/windowsTwo]
inherit = bar/base
monitor = DP-0
modules-left = bspwm
width = 8%
padding = 0
offset-x = 10

[bar/music]
inherit = bar/base
monitor=DP-2
modules-left = spotify-icon spotify-previous spotify-playpause spotify-next spotify
width = 450
padding = 4
offset-x = 1725

[bar/tray]
inherit = bar/base
monitor=DP-2
modules-left = pulseaudio-control
modules-right = date
padding = 2
module-margin = 1
width = 350
offset-x = 2195

;                      _       _           
;  _ __ ___   ___   __| |_   _| | ___  ___ 
; | '_ ` _ \ / _ \ / _` | | | | |/ _ \/ __|
; | | | | | | (_) | (_| | |_| | |  __/\__ \
; |_| |_| |_|\___/ \__,_|\__,_|_|\___||___/
                                         

[module/bspwm]
type = internal/bspwm
format = <label-state>
format-margin = 4
index-sort = true
pin-workspaces = true

ws-icon-0=Web;
ws-icon-1=Term;
ws-icon-2=Discord;
ws-icon-3=Spotify;
ws-icon-4=Code;

enable-click = true
reverse-scroll = false
enable-scroll = true

label-focused = %icon%
label-focused-underline = ${colors.foreground}
label-focused-padding = 3
label-focused-font = 2

label-empty = %icon%
label-empty-padding = 3

label-occupied = %icon%
label-occupied-padding = 3
label-occupied-font = 2

[module/date]
type = internal/date
interval = 10
format-margin = 2

time = "%I:%M"
date = "%d %b"

label = %time% | %date%
label-background = ${colors.background}
label-padding = 2

[module/pulseaudio-control]
type = custom/script
tail = true
label=%output%

exec = ~/.config/polybar/scripts/pulseaudio-control.bash listen
click-right = exec pavucontrol &
click-left = ~/.config/polybar/scripts/pulseaudio-control.bash togmute
click-middle = ~/.config/polybar/scripts/pulseaudio-control.bash next-sink
scroll-up = ~/.config/polybar/scripts/pulseaudio-control.bash up
scroll-down = ~/.config/polybar/scripts/pulseaudio-control.bash down
label-padding = 2
label-foreground = ${colors.foreground}

[module/spotify-icon]
type = custom/script
exec = echo ""

[module/spotify]
type = custom/script
interval = 2
exec-if = pgrep -x spotify
exec = ~/.config/polybar/scripts/spotify
format-padding = 5

[module/spotify-playpause]
type = custom/script
interval = 0
exec-if = pgrep -x spotify
exec = ~/.config/polybar/scripts/spotify-playpause
click-left = playerctl play-pause
format-padding = 3

[module/spotify-previous]
type = custom/script
exec-if = pgrep -x spotify
exec = echo ""
click-left = playerctl previous
format-padding = 3

[module/spotify-next]
type = custom/script
exec-if = pgrep -x spotify
exec = echo ""
click-left = playerctl next
format-padding = 3

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0

